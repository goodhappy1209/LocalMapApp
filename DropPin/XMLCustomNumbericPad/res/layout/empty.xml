<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#000000">

    <RelativeLayout 
        android:id="@+id/layout"
    	android:layout_width="fill_parent"
    	android:layout_height="match_parent"
    	android:layout_above="@+id/rly_user_board"
    	android:background="#000000">
        
    </RelativeLayout>

   	<RelativeLayout
        android:id="@+id/rly_user_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/tabbar_margin_height"
        android:paddingRight="@dimen/tabbar_margin_height"
        android:paddingBottom="@dimen/tabbar_margin_height"
        android:background="@color/color_lightblue_board">
        
   	    <TextView 
   	        android:id="@+id/tv_placement_id"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_marginTop="@dimen/tabbar_margin_height"
   	        android:layout_marginLeft="@dimen/tabbar_margin_height"
   	        android:text="SW3453"
   	        android:textSize="@dimen/font_size_17dp"
   	        android:textColor="@android:color/black"/>
   	    <TextView 
   	        android:id="@+id/tv_placed_info"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_marginLeft="@dimen/tabbar_margin_height"
   	        android:layout_below="@+id/tv_placement_id"
   	        android:text="Placed 16th February 2016"
   	        android:textSize="@dimen/font_size_14dp"
   	        android:textColor="@color/color_white"/>
   	    <LinearLayout
   	        android:id="@+id/ly_divider_boader"
   	        android:layout_width="match_parent"
   	        android:layout_height="1px"
   	        android:layout_marginLeft="@dimen/tabbar_margin_height"
   	        android:layout_marginRight="@dimen/tabbar_margin_height"
   	        android:layout_marginTop="@dimen/tabbar_margin_height"
   	        android:layout_marginBottom="@dimen/tabbar_margin_height"
   	        android:layout_below="@+id/tv_placed_info"
   	        android:background="@android:color/black"
   	        android:orientation="vertical">
   	        
   	    </LinearLayout>   
   	    
   	    <TextView 
   	        android:id="@+id/tv_placed_userinfo"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_marginLeft="@dimen/tabbar_margin_height"
   	        android:layout_below="@+id/ly_divider_boader"
   	        android:text="John Smith"
   	        android:textSize="@dimen/font_size_14dp"
   	        android:textColor="@color/color_white"/>
   	    
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_numberic_delete"
        android:layout_width="@dimen/tabbar_height"
        android:layout_height="@dimen/tabbar_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/button_fab_bottom_margin"
        android:layout_marginRight="@dimen/tabbar_margin_height"
        android:src="@drawable/btn_fab_src"
        android:background="@drawable/btn_fab_bg" />
    
</RelativeLayout>